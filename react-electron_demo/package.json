{
  "name": "react-electron_demo",
  "version": "1.0.0",
  "description": "demo",
  "main": "./main-dist/index.js",
  "build": {
    "productName": "test",
    "appId": "org.react.sanlei",
    "mac": {
      "icon": "assets/icon.icns",
      "type": "distribution",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "build/favicon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": false
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:main": "tsc -w --p tsconfig.main.json",
    "build:main": "tsc --p tsconfig.main.json",
    "start:electron": "electron ./main-dist/index.js",
    "start:react": "webpack serve --config render/config/webpack.dev.js",
    "build:react": "webpack --config render/config/webpack.prod.js",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "author": "sanlei",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.5.1",
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5",
    "electron-is-dev": "^2.0.0",
    "electron-reloader": "^1.2.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "less-loader": "^10.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.3",
    "webpack-merge": "^5.8.0"
  }
}
